{
  "name": "Onboard1_0",
  "description": "node.js api with feathers for tests and git actions",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {},
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 22.20.0"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "postgresql",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "lib/client.js",
    "lib/**/*.d.ts",
    "lib/**/*.shared.js"
  ],
  "main": "lib/client",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "cross-env NODE_ENV=test npm run migrate && npm run mocha",
    "lint": "eslint . --ext .ts,.js",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "coverage": "nyc npm test"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.35",
    "@feathersjs/authentication": "^5.0.35",
    "@feathersjs/authentication-client": "^5.0.35",
    "@feathersjs/configuration": "^5.0.35",
    "@feathersjs/errors": "^5.0.35",
    "@feathersjs/feathers": "^5.0.35",
    "@feathersjs/knex": "^5.0.35",
    "@feathersjs/koa": "^5.0.35",
    "@feathersjs/schema": "^5.0.35",
    "@feathersjs/socketio": "^5.0.35",
    "@feathersjs/transport-commons": "^5.0.35",
    "@feathersjs/typebox": "^5.0.35",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@feathersjs/cli": "^5.0.35",
    "@feathersjs/rest-client": "^5.0.35",
    "@types/chai": "^5.2.2",
    "@types/knex": "^0.15.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.0",
    "axios": "^1.12.2",
    "chai": "^6.2.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.ts",
      "knexfile.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
